    #login-modal.modal.fade(role="dialog", aria-labelledby="loginModalLabel", aria-hidden="true", tab-index="-1")
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type="button", data-dismiss="modal", aria-hidden="true") x
