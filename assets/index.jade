    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css')

  body
    #header-view.header.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
      .container-fluid
        .navbar-header
          a.navbar-brand(href="/") BabaScript Manager
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            li: a new
            li.dropdown
              a.dropdown-toggle(data-toggle="dropdown", href="#")
                | グループ一覧
                b.caret
              ul.groups.dropdown-menu
          form.navbar-form
            input.form-control.group-search(type="text", placeholder="search group")
    .container-fluid
      #main-view.row

    script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.5.2/underscore-min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/backbone.js/1.1.0/backbone-min.js')
    script(src='//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js')
    script(src='/script.js')

    script#user-view(type="text/template")
      .user.panel.panel-info.panel-default
        .panel-heading
          | hogefuga
        .panel-body
          | いえーい
    script#group-view-member(type="text/template")
      .members.panel.panel-info.panel-default
        .panel-heading
          メンバー
        .panel-body
          input
          button.btn.btn-primary
            追加する
          button.btn.btn-danger
            削除する
        table.table
          thead
            tr
              th name
              th deviceType
              th uuid
          tbody
            <% _.each(members, function(member){ %>
            tr
              th <%= member.name %>
              th <%= member.deviceType %>
              th <%= member.uuid %>
            <% }) %>
        form(role="form")
          div.input-group
            span.input-group-btn
              button.btn.btn-default +
            input.form-control(type="text", placeholder="put user name")
            //- tr
            //-   th: button.add-member.btn.btn-default
            //-     span.glyphicon.glyphicon-plus
            //-   th
            //-   th
