        .panel-heading
          分析
        .panel-body
          | ここに分析結果
    script#group-view-program(type="text/template")
      .members.panel.panel-info.panel-default
        .panel-heading
          プログラム
        .panel-body
          | プログラムをここで実行可能にするとか


    script#group-view(type="text/template")
      .row
        .sidebar.col-sm-3.col-md-2
          ul.nav.nav-sidebar
            li.member: a(href="member") メンバー
            li.analytics: a(href="analytics") 解析
            li.program: a(href="program") プログラム
        #content-view.col-sm-9.col-sm-offse-3.col-md-10.col-md-offse-2.main
    script#user-view(type="text/template")
      .row
        .class.panel.panel-default
          .class.panel-body
            Basic panel example
    script#sidebar-group-element(type="text/template")
      a.list-card(href!='/groups/<%= name %>')
        h4 <%= name %>
        p <%= description %>
    script#group-element(type="text/template")
      li: a(href!='/groups/<%= name %>/') <%= name %>
    script#group-member-view(type="text/template")
      .panel.panel-default
        .panel-heading
          メンバー
        .panel-body
          ほげふがほげふが
        table.table
          thead
            tr
              th name
              th deviceType
              th uuid
          tbody
            <% _.each(members, function(member){ %>
            tr
              th <%= member.name %>
              th <%= member.deviceType %>
              th <%= member.uuid %>
            <% }) %>

    script#login-view(type="text/template")
      form.form-signin
        h2 login or sign up
        input.login-id.form-control(type="text", placeholder="id")
        input.login-pass.form-control(type="text", placeholder="pass")
        button.login.btn.btn-lg.btn-primary.btn-block login
        button.signup.btn.btn-lg.btn-primary.btn-block signup