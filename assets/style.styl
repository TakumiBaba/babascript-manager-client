body
  padding-top 50px
  font 14px 'Lucida Grande', Helvetica, Arial, Sans-Serif
  text-decoration: none

a
  color #00B7FF
  text-decoration: none
  h4
    text-decoration: none

.header
  margin-bottom: 0

.sidebar
  display: none
  padding: 0
  margin: 0
  padding-left: 0
  .list-card
    display: block
    text-decoration: none
    margin: 1px 0
    padding: 30px
  .first
    margin-top: 0

@media (min-width:768px)  
  .sidebar
    z-index: 1000
    display: block
    margin: 0
    padding: 0
    // background-color: #f5f5f5
    .sidebar-box
      margin-left: -15px
      margin-right: -15px
      border-right: 1px solid #eee
      border-bottom: 1px solid #eee
      a
        display: block

